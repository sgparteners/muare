{%- if block.settings.logo -%}
  {%- style -%}
    .footer__logo a {
      height: {{ block.settings.desktop_logo_height }}px;
    }
    
    .footer__logo-wrapper {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }
    
    .footer__contact-links {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
    }
    
    .footer__contact {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: currentColor;
      text-decoration: none;
      font-size: 1.1rem;
      transition: opacity 0.2s ease;
    }
    
    .footer__contact:hover {
      opacity: 0.8;
    }
    
    .footer__contact svg {
      width: 20px;
      height: 20px;
    }
  {%- endstyle -%}
  
  {%- assign footer_logo_size = block.settings.desktop_logo_height | prepend: 'x' -%}
  <div class="footer__logo-wrapper">
    <div class="footer__logo">
      <a href="{{ routes.root_url }}">
        <img src="{{ block.settings.logo | img_url: footer_logo_size, scale: 2 }}" alt="{{ block.settings.logo.alt | default: shop.name }}">
      </a>
    </div>
    <div class="footer__contact-links">
      <a href="tel:+34966500170" class="footer__contact">
        <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 24 24">
